---
import { SITE } from "@config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "@layouts/Layout.astro";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title="About">
  <Header activeNav="about" />
  <Breadcrumbs />
  <main id="main-content">
    <section id="about" class="prose mb-28 max-w-3xl prose-img:border-0">
      <h1 class="text-2xl tracking-wider sm:text-3xl">About</h1>
      <div class="bio-container">
        <div class="bio-image-container">
            <img class="bio-image" src="/assets/profile.png"/>
        </div>
        <div class="spacer" />
        <div class="text-container">
            <p style="margin: 0;">
              A British iOS Engineer currently based in Taipei, Taiwan with a
              strong background in mathematics and problem-solving. Over six
              years of professional experience, specializing in Swift and RxSwift, 
              with additional web development skills in React and various other frameworks.
              <br>
              <br>
              
              Experienced in working effectively in cross-cultural environments.
              Instrumental in delivering multiple successful projects from 
              concept to launch. Committed to delivering high-quality,
              user-friendly iOS apps and continuously honing my skills.

              <br>
              <br>
              
              Always open to new opportunities, feel free to reach out to me via <a href="mailto:kekearif@gmail.com">email</a>.

              <br>
              <br>
              
              This website is powered by <a href="https://astro.build">Astro</a> with Tailwind and hosted on Github Pages.
            </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .bio-container {
    display: flex;
  }
  .spacer {
    width: 80px;
  }
  .bio-image {
    border-radius: 100%;
    width: 100px;
    height: 100px;
    border: 1.4px solid;
    @apply border-skin-line;
   
  }
  .bio-image-container {
      margin-left: auto;
      margin-right: auto;
      height: 100px;
      width: 100px;
      flex-shrink: 0;
  }
  /* Mobile Styles */
  @media only screen and (max-width: 400px) {
    .bio-image {
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
    .spacer {
      height: 25px;
    }
    .bio-container {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
