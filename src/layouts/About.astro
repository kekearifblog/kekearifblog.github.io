---
import Breadcrumbs from "@components/Breadcrumbs.astro";

export interface Props {
  pageTitle: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<Breadcrumbs />
<main id="main-content">
  <h1>{pageTitle}</h1>
  <br>
  <div class="bio-container">
    <div class="bio-image">
        <img src="/assets/profile.png"/>
    </div>
    <div class="spacer" />
    <div>
        <p>{pageDesc}</p>
    </div>
  </div>
  <slot />
</main>

<style>
  #main-content {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  #main-content h1 {
    @apply text-2xl font-semibold sm:text-3xl;
  }
  #main-content p {
    @apply mt-2 mb-6 italic;
  }
  .bio-container {
    display: flex;
  }
  .spacer {
    width: 50px;
  }
  img {
    border-radius: 100%;
    width: 100px;
    height: 100px;
    border: 2px solid;
    @apply border-skin-line
  }
  .bio-image {
    flex-shrink: 0;
    width: 100px;
  }
  /* Mobile Styles */
  @media only screen and (max-width: 400px) {
    .bio-image {
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
    .spacer {
      width: 70px;
    }
    .bio-container {
      flex-direction: column;
    }
  }
</style>
